{
    "breadcrumbs.filePath": "off",
    "cSpell.enabled": false,
    "chaliceIcons.showArrows": true,

    "debug.javascript.codelens.npmScripts": "never",
    "deno.enable": false,
    "diffEditor.renderSideBySide": false,

    "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontLigatures": true,

    "editor.find.seedSearchStringFromSelection": "selection",
    "editor.emptySelectionClipboard": false,

    "editor.tabSize": 2,
    "editor.trimAutoWhitespace": false,
    "editor.lightbulb.enabled": "off",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.dragAndDrop": false,
    "editor.definitionLinkOpensInPeek": true,
    "editor.semanticHighlighting.enabled": true,
    "editor.stablePeek": true,
    "editor.fastScrollSensitivity": 1,
    "editor.inlayHints.enabled": "onUnlessPressed",

    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,

    "editor.suggest.showStatusBar": true,
    "editor.suggest.preview": true,
    "editor.suggest.showDeprecated": false,

    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.maxColumn": 50,
    "editor.overviewRulerBorder": false,
    "editor.scrollbar.verticalScrollbarSize": 6,
    "editor.scrollbar.horizontalScrollbarSize": 4,
    "editor.stickyScroll.enabled": true,
    "editor.mouseWheelScrollSensitivity": 0.4,

    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.incrementalNaming": "smart",
    "explorer.sortOrder": "mixed",
    "explorer.openEditors.visible": 40, // aka "A lot"

    "eslint.run": "onType",
    "eslint.rules.customizations": [ { "rule": "*", "severity": "info" } ],
    "extensions.ignoreRecommendations": false,
    "extensions.closeExtensionDetailsOnViewChange": true,

    "files.autoSave": "onFocusChange",
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.jj": true
    },

    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.enableStatusBarSync": false,
    "git.rebaseWhenSync": true,
    "git.openRepositoryInParentFolders": "never",

    "gitblame.statusBarMessageFormat": "${author.name} (${time.ago})",
    "gitblame.infoMessageFormat": "[${commit.hash_short}] ${commit.summary}",
    "gitblame.statusBarMessageClickAction": "Open tool URL",

    "html.autoClosingTags": false,
    "javascript.autoClosingTags": false,

    "[javascript][json][typescript][typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "markdown.preview.breaks": true,

    "openapi.codeLens": false,

    "openInGitHub.useLocalBranch": false,
    "openInGitHub.remote.branch": "main",

    "search.globalFindClipboard": false,
    "search.searchEditor.doubleClickBehaviour": "selectWord",
    "search.searchEditor.defaultNumberOfContextLines": 0,
    "search.searchOnTypeDebouncePeriod": 500,
    "search.smartCase": true,

    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.fastScrollSensitivity": 1,
    "terminal.integrated.shellIntegration.enabled": false,
    "terminal.integrated.inheritEnv": false,

    "typescript.updateImportsOnFileMove.enabled": "never",
    "typescript.autoClosingTags": false,
    "typescript.inlayHints.parameterNames.enabled": "literals",
    "typescript.inlayHints.variableTypes.enabled": false,
    "typescript.inlayHints.parameterTypes.enabled": true,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
    "typescript.inlayHints.enumMemberValues.enabled": true,
    "typescript.inlayHints.propertyDeclarationTypes.enabled": true,

    "window.title": "${activeEditorShort}${separator}${rootName}${separator}${activeEditorMedium}",
    "window.newWindowDimensions": "offset",
    "window.autoDetectColorScheme": true,
    "window.confirmBeforeClose": "keyboardOnly",

    "workbench.activityBar.location": "top",
    "workbench.iconTheme": "chalice-icon-theme",
    "workbench.colorTheme": "Modest macOS - Light",
    "workbench.preferredLightColorTheme": "Modest macOS - Light",
    "workbench.preferredDarkColorTheme": "Modest macOS - Dark",
    "workbench.colorCustomizations": {
        "terminalCursor.foreground": "#C456FF",
        "minimap.findMatchHighlight": "#C456FF88",
        "minimap.foregroundOpacity": "#FFFFFF99",
        "editorBracketHighlight.unexpectedBracket.foreground": "#A52A2A",
    },

    "workbench.editor.tabActionLocation": "left",
    "workbench.editor.showIcons": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.openPositioning": "last",

    "workbench.editor.historyBasedLanguageDetection": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.decorations.badges": true,
    "workbench.editor.wrapTabs": true,
    "workbench.editor.autoLockGroups": {
        "default": true,
        "workbench.editorinputs.searchEditorInput": true,
        "imagePreview.previewEditor": true,
        "terminalEditor": true,
        "jupyter-notebook": false,
        "mainThreadWebview-markdown.preview": true
    },
    "workbench.editor.limit.perEditorGroup": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.indent": 12,

}
